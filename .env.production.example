# Production Environment Configuration

# Server Configuration
PM_NODE_ENV=production
PM_PORT=3000
PM_HOST=0.0.0.0

# Blockchain Configuration
PM_RPC_URL=https://rpc.nexera.network
PM_CHAIN_ID=7208

# Smart Contract Addresses (Production)
PM_PROMPT_MINER_ADDRESS=0xYourProductionPromptMinerAddress
PM_ACTIVITY_POINTS_ADDRESS=0xYourProductionActivityPointsAddress

# Wallet Configuration
PM_PRIVATE_KEY=0xYourProductionPrivateKey

# PZERO B2B Integration - PRODUCTION
# Use the real PZERO Gateway service
PM_PZERO_API_URL=https://pm-gateway.projectzero.io/v1
PM_PZERO_API_KEY=pzero_prod_your_real_production_key
PM_PZERO_AUTH_TIMEOUT_MS=10000
PM_PZERO_RETRY_ATTEMPTS=5

# API Security - PRODUCTION
PM_API_KEYS=prod-key-1,prod-key-2,prod-key-3
PM_REQUIRE_AUTH=true
PM_REQUIRE_AUTH_MINT=true
PM_REQUIRE_AUTH_READ=false

# Rate Limiting (Production - stricter limits recommended)
# Time window in milliseconds (default: 15 minutes)
PM_RATE_LIMIT_WINDOW_MS=900000
# Maximum requests per window per IP (production: lower for better protection)
PM_RATE_LIMIT_MAX_REQUESTS=50
# Skip rate limiting for authenticated users (false recommended in production)
PM_RATE_LIMIT_SKIP_AUTHENTICATED=false
