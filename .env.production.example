# Production Environment Configuration

# Server Configuration
MINING_NODE_ENV=production
MINING_PORT=3000
MINING_HOST=0.0.0.0

# Blockchain Configuration
MINING_RPC_URL=https://rpc.nexera.network
MINING_CHAIN_ID=7208

# Smart Contract Addresses (Production)
MINING_PROMPT_MINER_ADDRESS=0xYourProductionPromptMinerAddress
MINING_ACTIVITY_POINTS_ADDRESS=0xYourProductionActivityPointsAddress

# Wallet Configuration
MINING_PRIVATE_KEY=0xYourProductionPrivateKey

# PZERO B2B Integration - PRODUCTION
# Use the real PZERO Gateway service
MINING_PZERO_API_URL=https://gateway.pzero.io/v1
MINING_PZERO_API_KEY=pzero_prod_your_real_production_key
MINING_PZERO_CLIENT_ID=your-production-company-id
MINING_PZERO_AUTH_TIMEOUT_MS=10000
MINING_PZERO_RETRY_ATTEMPTS=5

# API Security - PRODUCTION
MINING_API_KEYS=prod-key-1,prod-key-2,prod-key-3
MINING_REQUIRE_AUTH=true
MINING_REQUIRE_AUTH_MINT=true
MINING_REQUIRE_AUTH_READ=false

# Rate Limiting (Production - stricter limits recommended)
# Time window in milliseconds (default: 15 minutes)
MINING_RATE_LIMIT_WINDOW_MS=900000
# Maximum requests per window per IP (production: lower for better protection)
MINING_RATE_LIMIT_MAX_REQUESTS=50
# Skip rate limiting for authenticated users (false recommended in production)
MINING_RATE_LIMIT_SKIP_AUTHENTICATED=false
