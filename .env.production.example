# Production Environment Configuration

# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Blockchain Configuration
RPC_URL=https://rpc.nexera.network
CHAIN_ID=7208

# Smart Contract Addresses (Production)
PROMPT_MINER_ADDRESS=0xYourProductionPromptMinerAddress
ACTIVITY_POINTS_ADDRESS=0xYourProductionActivityPointsAddress
PROMPT_DO_ADDRESS=0xYourProductionPromptDOAddress
DATA_INDEX_ADDRESS=0xYourProductionDataIndexAddress

# Wallet Configuration
PRIVATE_KEY=0xYourProductionPrivateKey

# PZERO B2B Integration - PRODUCTION
# Use the real PZERO Gateway service
PZERO_API_URL=https://gateway.pzero.io/v1
PZERO_API_KEY=pzero_prod_your_real_production_key
PZERO_CLIENT_ID=your-production-company-id
PZERO_AUTH_TIMEOUT_MS=10000
PZERO_RETRY_ATTEMPTS=5

# API Security - PRODUCTION
API_KEYS=prod-key-1,prod-key-2,prod-key-3
REQUIRE_AUTH=true
REQUIRE_AUTH_MINT=true
REQUIRE_AUTH_READ=false

# Rate Limiting - PRODUCTION
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_AUTHENTICATED=true

# Logging
LOG_LEVEL=warn
