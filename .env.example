# ============================================
# Network Configuration Examples
# ============================================
#
# Nexera Testnet (RECOMMENDED for development):
# PM_RPC_URL=https://rpc.testnet.nexera.network
# PM_CHAIN_ID=72080
# Gas Token: tNXRA
#
# Nexera Mainnet (for production):
# PM_RPC_URL=https://rpc.nexera.network
# PM_CHAIN_ID=7208
# Gas Token: NXRA
#
# ============================================

# Server Configuration
PM_NODE_ENV=development
PM_PORT=3000

# Blockchain Configuration
PM_RPC_URL=
PM_CHAIN_ID=

# Smart Contract Addresses
PM_PROMPT_MINER_ADDRESS=

# Wallet Configuration (NEVER commit actual private keys)
PM_PRIVATE_KEY=

# PZERO B2B Integration (Required)
PM_PZERO_API_KEY=pzero_live_xxxxxxxxxxxxx
PM_PZERO_API_URL=https://pm-gateway.projectzero.io/v1

# PZERO Configuration (Optional)
PM_PZERO_AUTH_TIMEOUT_MS=5000
PM_PZERO_RETRY_ATTEMPTS=3

# API Security & Authentication (B2C - Your Users)
# Comma-separated list of valid API keys (e.g., "key1,key2,key3")
PM_API_KEYS=your-api-key-here,another-key-here
# Require authentication globally (true/false)
PM_REQUIRE_AUTH=true
# Require authentication for specific endpoints
PM_REQUIRE_AUTH_MINT=true
PM_REQUIRE_AUTH_READ=false

# Rate Limiting
# Time window in milliseconds (default: 15 minutes)
PM_RATE_LIMIT_WINDOW_MS=900000
# Maximum requests per window per IP
PM_RATE_LIMIT_MAX_REQUESTS=100
# Skip rate limiting for authenticated users (true/false)
PM_RATE_LIMIT_SKIP_AUTHENTICATED=false

# Reward Configuration
# Use multi-variant rewards (array) or single value (true/false)
PM_USE_MULTI_REWARDS=false