# ============================================
# Network Configuration Examples
# ============================================
#
# Nexera Testnet (RECOMMENDED for development):
# MINING_RPC_URL=https://rpc.testnet.nexera.network
# MINING_CHAIN_ID=72080
# Gas Token: tNXRA
#
# Nexera Mainnet (for production):
# MINING_RPC_URL=https://rpc.nexera.network
# MINING_CHAIN_ID=7208
# Gas Token: NXRA
#
# ============================================

# Server Configuration
MINING_NODE_ENV=development
MINING_PORT=3000

# Blockchain Configuration
MINING_RPC_URL=
MINING_CHAIN_ID=

# Smart Contract Addresses
MINING_PROMPT_MINER_ADDRESS=
MINING_ACTIVITY_POINTS_ADDRESS=

# Wallet Configuration (NEVER commit actual private keys)
MINING_PRIVATE_KEY=

# PZERO B2B Integration (Required)
# Register at https://gateway.pzero.io/register to get your credentials
MINING_PZERO_API_KEY=pzero_live_xxxxxxxxxxxxx
MINING_PZERO_CLIENT_ID=your-company-id
MINING_PZERO_API_URL=https://api.pzero.io/v1

# PZERO Configuration (Optional)
MINING_PZERO_AUTH_TIMEOUT_MS=5000
MINING_PZERO_RETRY_ATTEMPTS=3

# API Security & Authentication (B2C - Your Users)
# Comma-separated list of valid API keys (e.g., "key1,key2,key3")
MINING_API_KEYS=your-api-key-here,another-key-here
# Require authentication globally (true/false)
MINING_REQUIRE_AUTH=true
# Require authentication for specific endpoints
MINING_REQUIRE_AUTH_MINT=true
MINING_REQUIRE_AUTH_READ=false

# Rate Limiting
# Time window in milliseconds (default: 15 minutes)
MINING_RATE_LIMIT_WINDOW_MS=900000
# Maximum requests per window per IP
MINING_RATE_LIMIT_MAX_REQUESTS=100
# Skip rate limiting for authenticated users (true/false)
MINING_RATE_LIMIT_SKIP_AUTHENTICATED=false
